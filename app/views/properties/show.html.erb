<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.price %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>

  <% @property.nearest_stations.each_with_index do |station,i| %>
  
  <h3><strong> 最寄駅 <%= "#{i+1}" %> </strong></h3>

  <div>
  <strong>路線名:</strong>
  <%= station.line %>
  </div>

  <div>
  <strong>駅名:</strong>
  <%= station.station %>
  </div>

  <div>
  <strong>徒歩分数:</strong>
  <%= station.duration %>
  </div>

  <% end %>

